# Example environment file for CycleMusic Orchestrator
# Copy this to `.env` and fill in the secrets before running.

# Spotify API credentials (required)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# A refresh token with access to the account that will play the playlist
SPOTIFY_REFRESH_TOKEN=your_refresh_token_here

# Where captured WAV files and metadata are stored
CAPTURES_DIR=captures

# Poll interval for checking currently-playing (seconds)
POLL_SECONDS=1.0

# Pad seconds to append to each capture to avoid chopping
PAD_SECONDS=1.0

# Capture mode: pipe-only capture via librespot + ffmpeg (default)
LIBRESPOT_PIPE=1
LIBRESPOT_DEVICE_NAME=CycleMusicLibrespot

# Base44
BASE44_APP_ID=your_app_id
BASE44_API_KEY=your_api_key

# Spotify
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret
SPOTIFY_REFRESH_TOKEN=your_refresh_token

# Processing playlist
SPOTIFY_PLAYLIST_ID=...

# Runtime
POLL_SECONDS=60
BATCH_SIZE=25

# Paths
CAPTURES_DIR=/home/appuser/cyclemusic-orchestrator/captures
LOG_DIR=/home/appuser/cyclemusic-orchestrator/logs

# Audio capture
PULSE_MONITOR_SOURCE=librespot_sink.monitor
CAPTURES_DIR=/home/appuser/cyclemusic-orchestrator/captures



# OpenAI (required for choreography generation inside analyze_track.py)
OPENAI_API_KEY=your_openai_api_key
